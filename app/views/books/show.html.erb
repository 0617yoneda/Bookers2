<h1>Book detail</h1>

<table>
  <tr>
    <td></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <%if @book.user == current_user  %>
        <%= link_to "Edit", edit_book_path(@book) %>
      <% end %>
      </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
    </td>
  </tr>
</table>

<!--プロフィール-->
<%= render "users/profile", user: @user %>

<!--新規投稿-->
<%= render "books/new", book: @book %>