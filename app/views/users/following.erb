<h1>Follow Users</h1>

<% if @user.following_user.empty? %>
    <span>ユーザーはいません</span>
<% else %>


  <table class="table">
     <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
     </thead>
     <tbody>
     <% @user.following_user.each do |user| %>
       <tr>
         <td><%= attachment_image_tag user, :profile_image, size: "60x60", fallback: "no_image.jpg" %></td>
         <td><%= user.name %></td>
         <td>フォロー数:<%= user.follower.count %></td>
         <td>フォロワー数:<%= user.followed.count %></td>
         <td></td>
         <td><%= link_to "Show", user_path(user) %></td>
       </tr>
     <% end %>
     </body>
  </table>
<% end %>